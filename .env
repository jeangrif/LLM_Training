# === LLM Provider ===
RAGBOT_LLM_PROVIDER=llama_cpp

# Modèle (repo GGUF + fichier exact)
HF_MODEL_ID=TheBloke/Mistral-7B-Instruct-v0.2-GGUF
GGUF_FILENAME=mistral-7b-instruct-v0.2.Q4_K_M.gguf

# Perfs
N_CTX=8192
N_THREADS=8
N_GPU_LAYERS=32    # 0 = CPU

# Génération
HF_MAX_NEW_TOKENS=512
TEMP=0.7
TOP_P=0.95

# === Data Squad ===
HF_DATASET_NAME = squad
HF_DATASET_SPLIT = train
TEXT_FIELD = context
RAW_DIR = data/raw

# === Embeddings ===
EMBED_MODEL = sentence-transformers/all-MiniLM-L6-v2
EMBED_BATCH_SIZE = 64

FAISS_INDEX_PATH=data/index/faiss.index
FAISS_USE_GPU=false

# === RAG Index ===
INDEX_DIR=data/index
CHUNK_SIZE = 400
CHUNK_OVERLAP = 60
TOP_K = 5
HYBRID_ALPHA = 0.5

# === Eval Model and device ===
PARAPHRASE_MODEL=humarin/chatgpt_paraphraser_on_T5_base
EVAL_DEVICE=auto   # auto, cpu, cuda, mps

# === Dataset config ====
EVAL_INPUT=data/eval/base_questions.jsonl
EVAL_OUTPUT=data/eval/augmented_questions.jsonl
EVAL_LIMIT=100
EVAL_OFFSET=0
EVAL_MAX_NEW_TOKENS=64

EVAL_INPUT=data/eval/augmented_questions.jsonl
EVAL_RESULTS_RAG=data/eval/results_rag.jsonl
EVAL_RESULTS_NO_RAG=data/eval/results_no_rag.jsonl

# === Logging ===
SQLITE_PATH= logs/ragbot.sqlite
ENABLE_MONGO = false
MONGO_URI = mongodb+srv://user:pass@cluster/dbname